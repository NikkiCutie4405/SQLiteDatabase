<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFEB00"
            android:padding="20dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SQLite Database App"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="14sp"
                android:textColor="#FFEB00"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/Fname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter First Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FFEB00"
                android:textColorHint="#999900"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Middle Name"
                android:textSize="14sp"
                android:textColor="#FFEB00"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/Mname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Middle Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FFEB00"
                android:textColorHint="#999900"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="14sp"
                android:textColor="#FFEB00"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/Lname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Last Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FFEB00"
                android:textColorHint="#999900"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="14sp"
                android:textColor="#FFEB00"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/Addre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Address"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FFEB00"
                android:textColorHint="#999900"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#FFEB00"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/Gmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Email"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="4dp"
                android:textColor="#FFEB00"
                android:textColorHint="#999900"/>

        </LinearLayout>

        <!-- Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add Record"
                android:onClick="AddRecord"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFEB00"
                android:textColor="#000000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="View Records"
                android:onClick="ViewRecords"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFEB00"
                android:textColor="#000000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Clear Records"
                android:onClick="ClearRecords"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#FFEB00"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>